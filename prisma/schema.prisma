generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Proof {
  id             Int        @id @default(autoincrement())
  proposalId     Int
  bidId          Int?
  milestoneIndex Int?
  note           String?
  createdAt      DateTime   @default(now())
  createdBy      String?
  files          ProofFile[]

  @@index([proposalId, milestoneIndex])
  @@index([proposalId])
}

model ProofFile {
  id        Int      @id @default(autoincrement())
  proofId   Int
  url       String?
  cid       String?
  name      String?
  path      String?
  createdAt DateTime @default(now())

  proof     Proof    @relation(fields: [proofId], references: [id], onDelete: Cascade)

  @@index([proofId])
}